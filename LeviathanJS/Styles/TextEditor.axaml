<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="AvaloniaEdit|TextEditor">
        <Setter Property="FontFamily" Value="{DynamicResource EditorFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource EditorFontSize}" />
        <Setter Property="Background" Value="{DynamicResource EditorBackgroundColor}" />
        <Setter Property="Foreground" Value="{DynamicResource EditorForegroundColor}" />
        <Setter Property="ShowLineNumbers" Value="True" />
    </Style>
</Styles>
